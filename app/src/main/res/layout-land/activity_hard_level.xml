<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingBottom="@dimen/vertical_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:background="@drawable/background"
    tools:context=".EasyLevel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <ImageView
            android:id="@+id/imgCoin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/coin" />

        <ImageView
            android:id="@+id/audio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/audio" />

        <ImageView
            android:id="@+id/imgHint"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignTop="@+id/txtAnswer"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/hint" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="145dp"
            android:layout_height="134dp"
            android:layout_below="@+id/txtTitle"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/txtAnswer"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp"
            android:ems="10"
            android:foreground="@color/colorAccent"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/enter"
            android:inputType="text"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/button_background"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/check"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="115dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <TextView
            android:id="@+id/txtCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/imgCoin"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="casual" />

        <ImageView
            android:id="@+id/imgPrev"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="80dp"
            android:layout_toEndOf="@+id/imgCoin"
            app:srcCompat="@drawable/prev" />

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="80dp"
            android:layout_toStartOf="@+id/audio"
            app:srcCompat="@drawable/next" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>